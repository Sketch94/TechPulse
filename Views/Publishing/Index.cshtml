@model IEnumerable<TechPulse.Models.Article>

<div class="container mt-4">
    <h1 class="text-2xl font-bold mb-4">Publicerade Artiklar</h1>

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary">Skapa ny artikel</a>
    </div>

    @foreach (var article in Model)
    {
        <div class="border p-4 mb-4 rounded shadow">
            <h2 class="text-xl font-semibold">@article.Title</h2>
            <p class="text-gray-600 text-sm">av @article.AuthorId â€” @article.CreatedAt.ToLocalTime().ToString("d MMMM yyyy")</p>
            <p class="mt-2">@(article.Content.Length > 150 ? article.Content.Substring(0, 150) + "..." : article.Content)</p>
            <div class="mt-2">
                <span class="badge bg-primary">@article.Category</span>
                <div class="mt-2">
                    <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-outline-primary btn-sm">Redigera</a>
                    <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-outline-info btn-sm">Visa</a>
                    <a asp-action="Delete" asp-route-id="@article.Id" class="btn btn-outline-danger btn-sm">Ta bort</a>
                </div>
            </div>
        </div>
    }
</div> 