                    </svg>
                </button>

            </div>
        </nav>
        <div class="search-container p-3 mt-5 text-center">
            <div class="search-field">
                <label for="search" class="visually-hidden">Sök efter produkter:</label>
                <input type="text" id="search" placeholder="Sök efter produkt..." class="rounded-4 p-2" />
            </div>
        </div>
    </header>


    <footer class="footer box-shadow text-center mt-auto d-flex">
        <span class="copyright-text">
            &copy; 2025 - TechPulse.
        </span>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script src="~/js/GSAP.js"></script>
    <script src="~/js/theme.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/search.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <main id="content">
        @RenderBody()
    </main>


</body>
</html>
